{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    // TODO: https://github.com/nrwl/nx/issues/3106
    // "composite": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-admin-starter/api/config": ["libs/api/config/src/index.ts"],
      "@nx-admin-starter/api/providers": ["libs/api/providers/src/index.ts"],
      "@nx-admin-starter/generated": ["@generated/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
